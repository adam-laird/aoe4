def update_resources(food, fpm, wood, wpm, stone, spm, gold, gpm):
    food += (fpm / tick_length)
    wood += (wpm / tick_length)
    stone += (spm / tick_length)
    gold += (gpm / tick_length)
    
def update_gold_from_pilgrims(gold, pilgrim_GPM, pilgrims):
    gold += (pilgrims * pilgrim_GPM)

